{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/index.js",
			"stopOnEntry": false,
			"args": [],
			"cwd": "${workspaceRoot}",
			"preLaunchTask": null,
			"runtimeExecutable": null,
			"runtimeArgs": [
				"--nolazy"
			],
			"env": {
				"NODE_ENV": "development"
			},
      "console": "integratedTerminal",
			"sourceMaps": false
		},
		{
			"name": "Attach",
			"type": "node",
			"request": "attach",
			"port": 5858,
			"address": "localhost",
			"restart": false,
			"sourceMaps": false,
			"localRoot": "${workspaceRoot}",
			"remoteRoot": null
		},
    {
      "name": "Mocha",
      "type": "node",
      "request": "launch",
			"program": "${workspaceRoot}/test/house-rules/cumulative-draw-two.js",
      "stopOnEntry": false,
      "args": ["./test/house-rules/cumulative-draw-two.js"],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "npm: mocha",
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "sourceMaps": false
    }
	]
}