{
  "name": "uno-engine",
  "version": "0.0.3",
  "description": "Uno game implementation in JavaScript",
  "main": "main.js",
  "scripts": {
    "build:web": "webpack --config webpack.config.js",
    "build": "yarn run build:ts && yarn run tslint",
    "build:ts": "tsc",
    "build:ts:watch": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll"
  },
  "keywords": [
    "uno",
    "can-can",
    "card-game",
    "cards",
    "game"
  ],
  "author": "danguilherme",
  "repository": "danguilherme/uno",
  "license": "MIT",
  "dependencies": {
    "enum": "^2.3.0",
    "shuffle": "^0.2.2"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.0.0",
    "jest": "^23.1.0",
    "mocha": "^5.2.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2",
    "webpack": "^2.2.1"
  }
}
