{
  "compilerOptions": {
    "module": "ES2020",
    "lib": ["ES6"],
    "declaration": true,
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["build/**/*", "src/**/*", "src/global"]
}
